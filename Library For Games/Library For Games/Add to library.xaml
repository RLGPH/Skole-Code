<Window x:Class="Library_For_Games.Add_to_library"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library_For_Games"
        mc:Ignorable="d"
        Title="Add_to_library" Height="250" Width="293">
    <Grid>
        <TextBox x:Name="TB_Game_Name" HorizontalAlignment="Left" Margin="146,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Name of the game" HorizontalAlignment="Left" Margin="32,6,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_Hours_Played" HorizontalAlignment="Left" Margin="146,33,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Hours Played" HorizontalAlignment="Left" Margin="61,29,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="Steam" HorizontalAlignment="Left" Margin="209,56,0,0" VerticalAlignment="Top" Height="16" Width="57"/>
        <CheckBox Content="EpicGames" HorizontalAlignment="Left" Margin="126,57,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="Other" HorizontalAlignment="Left" Margin="209,77,0,0" VerticalAlignment="Top"/>
        <Label Content="which library its in" HorizontalAlignment="Left" Margin="0,58,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_DESCRIPTION" HorizontalAlignment="Left" Margin="146,117,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="95"/>
        <Label Content="Description" HorizontalAlignment="Left" Margin="61,117,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BTN_Close_without_Save" Content="Close without save" HorizontalAlignment="Left" Margin="13,150,0,0" VerticalAlignment="Top" Height="28" Width="118" Click="BTN_Close_without_Save_Click"/>
        <Button x:Name="BTN_Close_and_save" Content="Close and save" HorizontalAlignment="Left" Margin="13,183,0,0" VerticalAlignment="Top" Height="28" Width="118" Click="BTN_Close_and_save_Click"/>

    </Grid>
</Window>
