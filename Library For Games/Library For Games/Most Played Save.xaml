<Window x:Class="Library_For_Games.Most_Played_Save"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library_For_Games"
        mc:Ignorable="d"
        Title="Most_Played_Save" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="DTG_Games" d:ItemsSource="{d:SampleData ItemCount=5}" Height="249" VerticalAlignment="Top" Margin="10,45,10,0"/>
        <ComboBox HorizontalAlignment="Left" Margin="155,16,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Select Filter option" HorizontalAlignment="Left" Margin="36,14,0,0" VerticalAlignment="Top" Width="119"/>
        <Button x:Name="BTN_ADD" Content="ADD" HorizontalAlignment="Left" Margin="96,314,0,0" VerticalAlignment="Top" Height="34" Width="116" Click="BTN_ADD_Click"/>
        <Button x:Name="BTN_REMOVE" Content="REMOVE" Margin="217,314,0,0" Height="34" Width="116" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button x:Name="BTN_EDIT" Content="EDIT" HorizontalAlignment="Left" Margin="96,353,0,0" VerticalAlignment="Top" Height="34" Width="116"/>
        <Button x:Name="BTN_CLOSE" Content="CLOSE" HorizontalAlignment="Left" Margin="217,353,0,0" VerticalAlignment="Top" Height="34" Width="116" Click="BTN_CLOSE_Click"/>
        <TextBox x:Name="TB_ID_SELECT" HorizontalAlignment="Left" Margin="556,314,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="84" Height="34" FontSize="18" BorderBrush="#FF696A6C"/>
        <Label Content="Select game Using ID" HorizontalAlignment="Left" Margin="354,314,0,0" VerticalAlignment="Top" Width="197" Height="34" FontSize="18"/>
    </Grid>
</Window>
